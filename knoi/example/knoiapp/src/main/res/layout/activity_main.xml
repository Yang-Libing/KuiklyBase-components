<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/tv_test_knoi"
                android:background="@color/material_dynamic_tertiary95"
                android:text="tv_test_knoi"
                android:gravity="center"
                android:layout_height="40dp"/>

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/tv_test_knoi_c"
                android:background="@color/material_dynamic_tertiary95"
                android:text="tv_test_knoi_c"
                android:gravity="center"
                android:layout_height="40dp"/>

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/tv_test_knoi_string"
                android:background="@color/material_dynamic_neutral50"
                android:text="tv_test_knoi_string"
                android:gravity="center"
                android:layout_height="40dp"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>